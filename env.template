# ArchaeoVault Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=ArchaeoVault
APP_VERSION=1.0.0
APP_ENV=development
DEBUG_MODE=true
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Anthropic Claude API (Required)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API (Optional - for additional AI capabilities)
OPENAI_API_KEY=your-openai-api-key-here

# AI Model Configuration
DEFAULT_AI_MODEL=claude-3-5-sonnet-20241022
AI_MODEL_TEMPERATURE=0.7
AI_MODEL_MAX_TOKENS=4000
AI_MODEL_TIMEOUT=30

# AI Agent Configuration
AI_AGENT_POOL_SIZE=5
AI_AGENT_MAX_RETRIES=3
AI_AGENT_RETRY_DELAY=1
AI_AGENT_CACHE_TTL=3600

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Configuration
DATABASE_URL=postgresql://archaeo:archaeo123@localhost:5432/archaeovault
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=archaeovault
DATABASE_USER=archaeo
DATABASE_PASSWORD=archaeo123
DATABASE_POOL_SIZE=10
DATABASE_POOL_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_AI_ANALYSIS_TTL=7200
CACHE_CIVILIZATION_TTL=86400
CACHE_ARTIFACT_TTL=1800

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=archaeovault-uploads

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Mapbox API (Optional - for mapping features)
MAPBOX_TOKEN=your-mapbox-token-here

# Museum Database APIs (Optional)
MUSEUM_API_KEY=your-museum-api-key
MUSEUM_API_URL=https://api.museum.com

# Academic Database APIs (Optional)
ACADEMIC_API_KEY=your-academic-api-key
ACADEMIC_API_URL=https://api.academic.com

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================
# Service Discovery
SERVICE_DISCOVERY_URL=http://localhost:8500
SERVICE_REGISTRY_URL=http://localhost:8500

# API Gateway
API_GATEWAY_URL=http://localhost:8000
API_GATEWAY_PORT=8000

# Individual Microservices
ARTIFACT_SERVICE_URL=http://localhost:8001
CIVILIZATION_SERVICE_URL=http://localhost:8002
EXCAVATION_SERVICE_URL=http://localhost:8003
REPORT_SERVICE_URL=http://localhost:8004
AI_SERVICE_URL=http://localhost:8005
FILE_SERVICE_URL=http://localhost:8006

# Service Ports
ARTIFACT_SERVICE_PORT=8001
CIVILIZATION_SERVICE_PORT=8002
EXCAVATION_SERVICE_PORT=8003
REPORT_SERVICE_PORT=8004
AI_SERVICE_PORT=8005
FILE_SERVICE_PORT=8006

# =============================================================================
# AGENTIC AI CONFIGURATION
# =============================================================================
# Agent Orchestrator
AGENT_ORCHESTRATOR_URL=http://localhost:8005/orchestrator
AGENT_ORCHESTRATOR_TIMEOUT=60
AGENT_ORCHESTRATOR_MAX_RETRIES=3

# Individual AI Agents
ARTIFACT_AGENT_URL=http://localhost:8005/agents/artifact
DATING_AGENT_URL=http://localhost:8005/agents/dating
CIVILIZATION_AGENT_URL=http://localhost:8005/agents/civilization
EXCAVATION_AGENT_URL=http://localhost:8005/agents/excavation
REPORT_AGENT_URL=http://localhost:8005/agents/report
RESEARCH_AGENT_URL=http://localhost:8005/agents/research

# Agent Configuration
AGENT_MEMORY_TTL=86400
AGENT_CONTEXT_SIZE=4000
AGENT_MAX_CONCURRENT_REQUESTS=10
AGENT_REQUEST_TIMEOUT=30

# Agent Tools Configuration
AGENT_TOOLS_CACHE_TTL=3600
AGENT_TOOLS_MAX_RETRIES=3
AGENT_TOOLS_TIMEOUT=15

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0
STREAMLIT_HEADLESS=true
STREAMLIT_SERVER_RUN_ON_SAVE=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log Level
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Structured Logging
LOG_STRUCTURED=true
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_LEVEL=true
LOG_INCLUDE_MODULE=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://archaeo:archaeo123@localhost:5432/archaeovault_test
TEST_REDIS_URL=redis://localhost:6379/1

# Test Configuration
TEST_TIMEOUT=30
TEST_PARALLEL_WORKERS=4
TEST_COVERAGE_THRESHOLD=90

# Mock Services
MOCK_AI_SERVICES=false
MOCK_EXTERNAL_APIS=false
MOCK_DATABASE=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Tools
DEV_TOOLS_ENABLED=true
DEV_AUTO_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_PROFILER_ENABLED=false

# Code Quality
CODE_QUALITY_CHECKS=true
LINT_ON_SAVE=true
FORMAT_ON_SAVE=true
TYPE_CHECK_ON_SAVE=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production Settings
PRODUCTION_MODE=false
PRODUCTION_DEBUG=false
PRODUCTION_LOG_LEVEL=WARNING

# Performance
PERFORMANCE_MONITORING=true
PERFORMANCE_PROFILING=false
PERFORMANCE_METRICS_INTERVAL=60

# Scaling
AUTO_SCALING_ENABLED=false
MIN_INSTANCES=1
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# AI Features
ENABLE_AI_ANALYSIS=true
ENABLE_AI_AGENTS=true
ENABLE_AI_ORCHESTRATION=true
ENABLE_AI_MEMORY=true

# 3D Features
ENABLE_3D_VIEWER=true
ENABLE_3D_MODELING=true
ENABLE_VR_SUPPORT=false

# Advanced Features
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_MOBILE_APP=false
ENABLE_API_ACCESS=true
ENABLE_WEBHOOKS=false

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# Email Configuration
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# Notification Configuration
NOTIFICATION_ENABLED=false
NOTIFICATION_CHANNELS=email,webhook
NOTIFICATION_RETRY_ATTEMPTS=3

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_SCHEDULE=0 3 * * *
FILE_BACKUP_RETENTION_DAYS=7

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Settings
DOCKER_NETWORK=archaeovault-network
DOCKER_SUBNET=172.20.0.0/16

# Container Resources
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=1.0
CONTAINER_RESTART_POLICY=unless-stopped

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
# Kubernetes Settings
K8S_NAMESPACE=archaeovault
K8S_IMAGE_PULL_POLICY=IfNotPresent
K8S_REPLICA_COUNT=3

# Resource Limits
K8S_MEMORY_REQUEST=512Mi
K8S_MEMORY_LIMIT=1Gi
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=1000m

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
# GitHub Actions
GITHUB_TOKEN=your-github-token
GITHUB_REPOSITORY=your-username/ArchaeoVault

# Docker Registry
DOCKER_REGISTRY_URL=docker.io
DOCKER_REGISTRY_USERNAME=your-docker-username
DOCKER_REGISTRY_PASSWORD=your-docker-password

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID=your-tracking-id

# Usage Tracking
USAGE_TRACKING_ENABLED=false
USAGE_TRACKING_ANONYMOUS=true
USAGE_TRACKING_RETENTION_DAYS=365

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# GDPR Compliance
GDPR_COMPLIANCE_ENABLED=true
GDPR_DATA_RETENTION_DAYS=2555
GDPR_RIGHT_TO_BE_FORGOTTEN=true

# Data Privacy
DATA_PRIVACY_ENABLED=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_SENSITIVE_DATA=false

